<h1>New game</h1>
<div class="container">
  <% @letters.each do |letter| %>
    <div class="wordDisplay"><%= letter %></div>
  <% end %>
</div>
<form method="post" action="score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="letters" name="letters" value=<%= @letters.join %> type="hidden" />
  <label for="word">What is the longest word you can find?</label>
  <input type="text" id="word" name="word" style="width: 400px;">
  <input type="submit" value="Play">
</form>
